{{!-- Extending the main layout --}}
{{!-- {{#extend "main"}} --}}

{{!-- Defining content for the "body" section of the main layout --}}
{{!-- {{#content "body"}} --}}
<div class="row justify-content-center">
    <div class="col-md-6">
        <h2>Sign Up</h2>
        
        <!-- Form for user sign-up, posting data to /signup -->
        <form action="/api/users/signup" method="POST">
            <div class="mb-3">
                <!-- Label for the full name input field -->
                <label for="username" class="form-label">UserName</label>
                
                <!-- Full name input field -->
                <input type="text" class="form-control" id="username" name="username" required>
            </div>
            <div class="mb-3">
                <!-- Label for the email input field -->
                <label for="email" class="form-label">Email address</label>
                
                <!-- Email input field -->
                <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="mb-3">
                <!-- Label for the password input field -->
                <label for="password" class="form-label">Password</label>
                
                <!-- Password input field -->
                <input type="password" class="form-control" id="password" name="password" required>
            </div>
            
            <!-- Submit button for the sign-up form -->
            <button type="submit" class="btn btn-primary">Sign Up</button>
        </form>
        
        {{!-- Placeholder for a connection to a second form that collects team data --}}
    </div>
</div>
{{!-- {{/content}} --}}