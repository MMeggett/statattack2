<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Meta tags for character set and viewport settings -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/output.css">


    <!-- Page title -->
    <title>StatAttack</title>
    
    <!-- Link to google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Alfa+Slab+One&display=swap" rel="stylesheet">

</head>

<body>

    <!-- Header section with navigation bar -->
<!-- Header section with navigation bar -->
<header>
  <nav class="bg-gray-800">
    <div class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-8 flex items-center justify-between">
      <!-- Brand name/logo -->
      <a class="text-white text-2xl font-bold" href="#">StatAttack</a>

      <!-- Button for toggling the navbar on small screens -->
      <button class="text-white sm:hidden" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Collapsible navbar content -->
      <div class="hidden sm:flex sm:items-center" id="navbarNav">
        <ul class="flex space-x-4">
          <!-- Check if the user is authenticated -->
          {{#if user}}
          <!-- Logout link for authenticated users -->
          <li class="nav-item">
            <a class="nav-link text-white hover:text-gray-300" href="/logout">Logout</a>
          </li>
          {{else}}
          <!-- Login and Sign Up links for unauthenticated users -->
          <li class="nav-item">
            <a class="nav-link text-white hover:text-gray-300" href="/login">Login</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-white hover:text-gray-300" href="/signup">Sign Up</a>
          </li>
          {{/if}}
        </ul>
      </div>
    </div>
  </nav>
</header>

                <!-- Collapsible navbar content -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <!-- Check if the user is authenticated -->
                        {{#if logged_in}}
                        <!-- Logout link for authenticated users -->
                        <li class="nav-item">
                            <a class="nav-link" href="/logout">Logout</a>
                        </li>
                        {{else}}
                        <!-- Login and Sign Up links for unauthenticated users -->
                        <li class="nav-item">
                            <a class="nav-link" href="/login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/signup">Sign Up</a>
                        </li>
                        {{/if}}
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main content area -->
    <main class="container mt-4">
        <!-- Placeholder for the body content from other templates -->
        {{{body}}}
    </main> 

</body>

</html>
